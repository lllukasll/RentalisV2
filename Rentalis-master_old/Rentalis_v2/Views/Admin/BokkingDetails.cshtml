            @Html.DropDownListFor(o => o.bookingModel.OrderStatusId.id, new SelectList(@Model.orderStatus, "Value", "Text"))
            @Html.ActionLink("Aktualizuj","UpdateStatus",new {orderId = @Model.bookingModel.Id, statusId = 1}, new { @class = "btn btn-primary" })
        </h3>*@

    
    
</div>