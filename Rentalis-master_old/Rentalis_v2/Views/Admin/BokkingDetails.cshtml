@model Rentalis_v2.Models.BookingDetailsViewModel
@{
    ViewBag.Title = "BokkingDetails";
    Layout = "~/Views/Shared/_AdminTestLayout.cshtml";
}
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="~/Admin">Admin</a>
    </li>
    <li class="breadcrumb-item">Rezerwacje</li>
    <li class="breadcrumb-item active">Szczegóły rezerwacji</li>
</ol>

<div class="jumbotron">
    
    <dl class="row">
        <dt class="col-sm-2">Samochód : </dt>
        <dd class="col-sm-10">@Model.bookingModel.CarModel.Name</dd>

        <dt class="col-sm-2">Id Użytkownika : </dt>
        <dd class="col-sm-10">
            <a href="~/Admin/UserDetails?userId=@Model.bookingModel.userId">@Model.bookingModel.userId</a>
            @*@Html.ActionLink(@Model.bookingModel.userId, "UserDetails", "Admin", new {userId = @Model.bookingModel.userId})*@
        </dd>

        <dt class="col-sm-2">Data od :</dt>
        <dd class="col-sm-10">@Model.bookingModel.DateTimeFrom</dd>

        <dt class="col-sm-2">Data do :</dt>
        <dd class="col-sm-10">@Model.bookingModel.DateTimeTo</dd>

        <dt class="col-sm-2">Cena :</dt>
        <dd class="col-sm-10">
            @Model.bookingModel.TotalPrice PLN
        </dd>
        
        <dt class="col-sm-2">Status : </dt>
        <dd class="col-sm-10">
            @using (Html.BeginForm("UpdateStatus", "Admin", FormMethod.Post))
            {
                @Html.HiddenFor(o => o.bookingModel.Id);

                @Html.DropDownListFor(o => o.bookingModel.OrderStatusId.id, new SelectList(@Model.orderStatus, "Value", "Text"), new {@class= "form-control" })
                <br /><div style="position: center; margin: auto; width: 100%"><input type="submit" value="Aktualizuj" class="btn btn-dark"/></div>
            }
        </dd>
    </dl>

