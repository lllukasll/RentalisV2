@model IEnumerable<Rentalis_v2.Models.UsersViewModel>
@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_AdminTestLayout.cshtml";
}

<h2>Users</h2>

<table id="tableAnnounce" class="table table-advance table-hover table-condemed " >
    <tbody>
    <tr>
        <th>Id</th>
        <th>Login</th>
        <th>Email</th>
        <th>Rola</th>
        <th></th>
    </tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.UserId</td>
            <td>@user.Username</td>
            <td>@user.Email</td>
            <td>@user.Role</td>
            <td>@Html.ActionLink("Szczegóły", "UserDetails", "Admin", new {userId = @user.UserId}, new {@class = "btn btn-primary"})</td>
        </tr>
    }

    </tbody>
</table>

