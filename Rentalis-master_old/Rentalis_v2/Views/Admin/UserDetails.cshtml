@model Rentalis_v2.Models.AdminUserDetailsViewModel
@{
    ViewBag.Title = "UserDetails";
    Layout = "~/Views/Shared/_AdminTestLayout.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="~/Admin">Admin</a>
    </li>
    <li class="breadcrumb-item active">Szczegóły użytkownika</li>
</ol>
<div class="jumbotron">
    <dl class="row">
        <dt class="col-sm-2">Login : </dt>
        <dd class="col-sm-10">@Model.userName</dd>

        <dt class="col-sm-2">Email : </dt>
        <dd class="col-sm-10">
            @Model.email
        </dd>

        <dt class="col-sm-2">Rola : </dt>
        <dd class="col-sm-10">
            @using (Html.BeginForm("UpdateUserRole", "Admin", FormMethod.Post))
                 {
                     @Html.HiddenFor(o => o.userId)
                     ;

                     @Html.DropDownListFor(o => o.RoleId, new SelectList(@Model.RoleList, "Value", "Text"), new { @class = "form-control" })
                     <br /><input type="submit" value="Aktualizuj" class="btn btn-dark"/>
                 }
        </dd>
    </dl>

</div>