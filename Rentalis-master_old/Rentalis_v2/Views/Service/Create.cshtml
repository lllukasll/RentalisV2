@model Rentalis_v2.Models.ServiceCarViewModel
@{
    ViewBag.Title = "Dodaj Serwis";
    Layout = "~/Views/Shared/_AdminTestLayout.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="~/Admin/">Admin</a>
    </li>
    <li class="breadcrumb-item">
        <a href="~/Service/">Serwis</a>
    </li>
    <li class="breadcrumb-item active">Dodaj nowy</li>
</ol>
<hr />
<div class="jumbotron">
    <div class="row">
        <div class="col-md-12">
        @using (Html.BeginForm("Create", "Service"))
        {
            @Html.AntiForgeryToken()

            <h3 class="text-center">Dodaj Serwis</h3>
            <hr/>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="row">
                <dt class="col-md-3">@Html.LabelFor(model => model.serviceName, "Nazwa Seriwsu :") </dt>
                <dd class="col-md-9">
                    @Html.EditorFor(model => model.serviceName, new {htmlAttributes = new {@class = "form-control"}})
                    @Html.ValidationMessageFor(model => model.serviceName, "", new {@class = "text-danger"})
                </dd>
                
                <dt class="col-md-3">@Html.LabelFor(model => model.Description, "Opis: ")</dt>
                <dd class="col-md-9">
                    @Html.TextAreaFor(m => m.Description, new {@class = "form-control"})
                    @Html.ValidationMessageFor(model => model.Description, "", new {@class = "text-danger"})
                </dd>
                
                <dt class="col-md-3">@Html.LabelFor(model => model.FromDateTime, "Data Od")</dt>
                <dd class="col-md-9">
                    @Html.EditorFor(model => model.FromDateTime, new {htmlAttributes = new {@class = "form-control"}})
                    @Html.ValidationMessageFor(model => model.FromDateTime, "", new {@class = "text-danger"})
                </dd>
                
                <dt class="col-md-3">@Html.LabelFor(model => model.ToDateTime, "Data Do")</dt>
                <dd class="col-md-9">
                    @Html.EditorFor(model => model.ToDateTime, new {htmlAttributes = new {@class = "form-control"}})
                    @Html.ValidationMessageFor(model => model.ToDateTime, "", new {@class = "text-danger"})
                </dd>
                
                <dt class="col-md-3">@Html.LabelFor(model => model.Price, "Cena:")</dt>
                <dd class="col-md-9">
                    @Html.EditorFor(model => model.Price, new {htmlAttributes = new {@class = "form-control"}})
                    @Html.ValidationMessageFor(model => model.Price, "", new {@class = "text-danger"})
                </dd>
                
                <dt class="col-md-3">@Html.LabelFor(model => model.Car, "Samochód")</dt>
                <dd class="col-md-9">
                    @Html.DropDownListFor(model => model.Car, new SelectList(Model.cars, "Id", "Name"), new { @class = "form-control" })
                </dd>
                
                    <div class="col-md-12">
                        <input type="submit" value="Dodaj" style="cursor:grab" class="btn btn-dark form-control"/>
                    </div>

            </div>
                }
        </div>
    </div>
</div> 

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}